{
	"name": "elevenways/doen",
	"type": "library",
	"description": "A bridge between PHP & Node.js",
	"keywords": ["nodejs", "bridge"],
	"license": "MIT",
	"authors": [
		{
			"name": "Jelle De Loecker",
			"email": "jelle@elevenways.be",
			"homepage": "https://skerit.com",
			"role": "Developer"
		}
	],
	"autoload": {
		"psr-4": { "Elevenways\\Doen\\": "src" }
	},
	"require": {
		"react/child-process": "^0.6.2",
		"react/promise": "^2.8"
	},
	"require-dev": {
		"phpunit/phpunit": "^8.5",
		"sempro/phpunit-pretty-print": "^1.4",
		"seregazhuk/react-promise-testing": "^0.6.0"
	},
	"scripts": {
		"test": [
			"phpunit"
		],
		"coverage": [
			"phpunit --verbose --coverage-html coverage/ -c phpunit.coverage.xml"
		]
	}
}
